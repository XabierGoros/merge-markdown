{
  "name": "@knennigtri/merge-markdown",
  "version": "0.2.5",
  "description": "Creates a single markdown file (with TOC) from several markdown files",
  "repository": {
    "type": "git",
    "url": "git@github.com:knennigtri/merge-markdown.git"
  },
  "author": "Kevin Nennig <nen.devpr@gmail.com>",
  "scripts": {
    "build": "npm run readmeTOC && npm ci",
    "m-json": "merge-markdown -m test/src/manifest.json",
    "m-yaml": "merge-markdown -m test/src/manifest.yml",
    "m-diffRelativeInputs": "merge-markdown -m test/src/manifest-diffRelativeInputs.yml",
    "m-noInput-noOutput": "merge-markdown -m test/src/manifest-noInput-noOutput.yml",
    "m-noInput-withOutput": "merge-markdown -m test/src/manifest-noInput-withOutput.yml",
    "m-onlyGlobalOptions": "merge-markdown -m test/src/manifest-noInput-withOutput.yml",
    "m-noInput-withInput-noOutput": "merge-markdown -m test/src/manifest-withInput-noOutput.yml",
    "noManifest": "merge-markdown -m test/src",
    "yamlTest": "merge-markdown -m test/src/yaml-test",
    "relTest": "merge-markdown -m test/src/rel-test",
    "readmeTOC": "doctoc README.md --github --title='# Contents'"
  },
  "main": "index.js",
  "keywords": [
    "markdown",
    "merge",
    "toc",
    "removeYAML",
    "noYAML"
  ],
  "license": "ISC",
  "dependencies": {
    "concat": "^1.0.3",
    "doctoc": "^2.0.0",
    "gulp": "^4.0.2",
    "gulp-replace": "^1.1.3",
    "js-yaml": "^4.1.0",
    "markdown-link-check": "^3.8.7",
    "minimist": "^1.2.5",
    "valid-url": "^1.0.9"
  },
  "bin": {
    "merge-markdown": "bin/global.js"
  },
  "preferGlobal": true,
  "directories": {
    "test": "test"
  },
  "devDependencies": {},
  "bugs": {
    "url": "https://github.com/knennigtri/merge-markdown/issues/new/choose"
  }
}
