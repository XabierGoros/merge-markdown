{
  "name": "@knennigtri/merge-markdown",
  "version": "0.2.6",
  "description": "Creates a single markdown file (with TOC) from several markdown files",
  "repository": {
    "type": "git",
    "url": "git@github.com:knennigtri/merge-markdown.git"
  },
  "author": "Kevin Nennig <nen.devpr@gmail.com>",
  "scripts": {
    "build": "npm run readmeTOC && npm ci",
    "readmeTOC": "doctoc README.md --github --title='# Contents'",
    "m-json": "merge-markdown -m test/markdown/src/manifest.json",
    "m-yaml": "merge-markdown -m test/markdown/src/manifest.yml",
    "m-diffRelativeInputs": "merge-markdown -m test/markdown/src/manifest-diffRelativeInputs.json",
    "m-noInput-noOutput": "merge-markdown -m test/markdown/src/manifest-noInput-noOutput.yml",
    "m-noInput-withOutput": "merge-markdown -m test/markdown/src/manifest-noInput-withOutput.yml",
    "m-onlyGlobalOptions": "merge-markdown -m test/markdown/src/manifest-noInput-withOutput.yml",
    "m-noInput-withInput-noOutput": "merge-markdown -m test/markdown/src/manifest-withInput-noOutput.yml",
    "noManifest": "merge-markdown -m test/markdown/src",
    "yamlTest": "merge-markdown -m test/markdown/src/yaml-test",
    "relTest": "merge-markdown -m test/markdown/src/rel-test",
    "test-manifest": "npm run m-json && npm run m-yaml && npm run m-diffRelativeInputs && npm run m-noInput-noOutput && npm run m-noInput-withOutput && npm run m-onlyGlobalOptions && npm run m-noInput-withInput-noOutput",
    "full-test": "npm run test-manifest && npm run noManifest && npm run yamlTest && npm run relTest"
  },
  "main": "index.js",
  "keywords": [
    "markdown",
    "merge",
    "toc",
    "removeYAML",
    "noYAML"
  ],
  "license": "ISC",
  "dependencies": {
    "concat": "^1.0.3",
    "doctoc": "^2.2.0",
    "js-yaml": "^4.1.0",
    "markdown-link-check": "^3.10.2",
    "minimist": "^1.2.6",
    "node-pandoc": "^0.3.0",
    "valid-url": "^1.0.9",
    "wkhtmltopdf": "^0.4.0"
  },
  "bin": {
    "merge-markdown": "bin/global.js"
  },
  "preferGlobal": true,
  "directories": {
    "test": "test"
  },
  "devDependencies": {},
  "bugs": {
    "url": "https://github.com/knennigtri/merge-markdown/issues/new/choose"
  }
}
